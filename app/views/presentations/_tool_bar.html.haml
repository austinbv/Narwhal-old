#toolbar.no_select
  #logo.no_select
  #tool_select_wrap
    #pencil_select.tool_select.active{:data => {:type => "pencil"}}
      %span Pencil
    #eraser_select.tool_select{:data => {:type => "eraser"}}
      %span Eraser
    #line_select.tool_select{:data => {:type => "line"}}
      %span Line
    #stroke_width_select.width_select{:data => {:type => "stroke_width"}}
      %span#mini_stroke_example
      %span Width
  - if presentation
    #allow_collaberation_wrap
      - if presentation_owner
        %p Collaboration
      - else
        %span#collaberation_enabled_disabled<
          Colaboration
          %span#on_off= troolean presentation.collaberation_on, :true => "On", :false => "Off"
    #add-slide
      = link_to "New slide", presentation_slides_path(presentation), :style => "z-index: 9999;position: absolute;", :method => :post
  - else
    = form_tag do
      = submit_tag "Start A Class Now", :id => "start_a_class"
  #links<
    - if current_user
      Hello #{current_user.first_name} #{login_logout_link}
#tool_pallet
  #stroke_width_slider_wrap
    #stroke_example
      #stroke_width_slider
