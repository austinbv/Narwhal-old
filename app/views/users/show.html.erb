<div id="created_presentations" class="presentation_wrapper vertical">
  Classrooms You Created
  <div>
    <% current_user.created_presentations.order("created_at DESC").each do |presentation| %>
      <a href="<%=presentation_path(presentation)%>">
        <div id="created_<%=presentation.permalink%>" data-permalink="<%= presentation.permalink%>" class="mini presentation"></div>
      </a>
      <script>
        canvas = Raphael("created_<%=presentation.permalink%>", 200, 150)
        <% presentation.slides.first.shapes.each do |shape| %>
          canvas.path("<%=shape.points_to_path%>")
        <%end%>
      </script>
    <% end %>
  </div>
</div>
